def calculate_matrix_mean(matrix: list[list[float]], mode: str) -> list[float]:

    result=[]

    if mode == "row":
        for i in matrix:
            sum_col=0
            for j in i:
                sum_col=sum_col+j
            result.append(sum_col/len(i))
    if mode == "column":
        for i in range (len(matrix[0])):
            sum_row=0
            for j in range (len(matrix)):
                sum_row=matrix[j][i]+sum_row
            result.append(sum_row/len(matrix))
	return result
